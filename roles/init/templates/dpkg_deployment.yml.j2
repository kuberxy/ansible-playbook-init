---

- name: copy packages
  copy: src={{ "{{" }} local_download_dir {{ "}}" }}/{{ "{{" }} item {{ "}}" }}.deb dest={{ "{{" }} image_dir {{ "}}" }} owner={{ "{{" }} item[0]_user {{ "}}" }} group={{ "{{" }} item[0]_user {{ "}}" }} mode=0644
  loop: "{{ "{{" }} dpkg_packages {{ "}}" }}"

- name: install packages
  shell: "apt-get install -y ./*.deb"
  args:
    chdir: "{{ "{{" }} image_dir {{ "}}" }}"
